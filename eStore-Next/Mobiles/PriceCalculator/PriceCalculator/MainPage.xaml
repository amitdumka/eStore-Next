<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PriceCalculator.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <HorizontalStackLayout>
            <Label Text="MRP"  Margin="10"/>
                <Entry Placeholder="MRP" x:Name="MRP"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <RadioButton x:Name="Fabric" Margin="10"  Content="Fabric"/>
               
                <RadioButton x:Name="RMZ" TextColor="Red" Content="Readymade" Margin="10"/>
                
            </HorizontalStackLayout>

            <Label Text="" FontSize="Large" x:Name="Result" TextColor="Blue" TextDecorations="Underline" FontAttributes="Bold"/>
            <Button
                x:Name="CounterBtn"
                Text="Calculate"
            
                Clicked="CounterBtn_Clicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
