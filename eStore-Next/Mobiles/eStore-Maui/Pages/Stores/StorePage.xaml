<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eStore_Maui.Pages.Stores.StorePage"
              xmlns:sfgrid="clr-namespace:Syncfusion.Maui.DataGrid;assembly=Syncfusion.Maui.DataGrid"
             Title="Stores">
    <VerticalStackLayout>
        <Label 
            Text="Store"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <VerticalStackLayout>
            <HorizontalStackLayout>
                <Button Text="Add"/>
                <Button Text="Delete"/>
                <Button Text="Refresh"/>
            </HorizontalStackLayout>
            <VerticalStackLayout>
                <sfgrid:SfDataGrid x:Name="dataGrid"
                           AutoGenerateColumnsMode="None"
                            ColumnWidthMode="Fill"
                           RowHeight="48"
                               SortingMode="Single"
                                  VerticalOptions="CenterAndExpand"
                                 SelectionMode="SingleDeselect"
                           HorizontalOptions="Center"
                           HorizontalScrollBarVisibility="Always"
                           VerticalScrollBarVisibility="Always"
                               ItemsSource="{Binding TestList}">
                    <sfgrid:SfDataGrid.DefaultStyle>
                        <sfgrid:DataGridStyle HeaderRowFontFamily="Roboto-Medium" HeaderRowFontSize="24" RowFontSize="14" HeaderRowTextColor="#212121" RowTextColor="#212121"></sfgrid:DataGridStyle>
                    </sfgrid:SfDataGrid.DefaultStyle>


                    <sfgrid:SfDataGrid.Columns>

                        <sfgrid:DataGridNumericColumn Format="D"
                                           HeaderText="Code"
                                           MappingName="StoreId"
                                           >
                        </sfgrid:DataGridNumericColumn>

                        <sfgrid:DataGridTextColumn 
                                           HeaderText="Name"
                                           MappingName="StoreName"
                                           >
                        </sfgrid:DataGridTextColumn>
                        <sfgrid:DataGridTextColumn 
                                           HeaderText="City"                       
                                           MappingName="city"
                                           >
                        </sfgrid:DataGridTextColumn>
                        <sfgrid:DataGridCheckBoxColumn 
                                           HeaderText="Active"                      
                                           MappingName="IsActive"
                                           >
                        </sfgrid:DataGridCheckBoxColumn>

                    </sfgrid:SfDataGrid.Columns>
                    <sfgrid:SfDataGrid.SortColumnDescriptions>
                        <sfgrid:SortColumnDescription ColumnName="StoreName" />
                    </sfgrid:SfDataGrid.SortColumnDescriptions>
                </sfgrid:SfDataGrid>
            </VerticalStackLayout>
            <Label Text="No of Store(s):1"/>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>
