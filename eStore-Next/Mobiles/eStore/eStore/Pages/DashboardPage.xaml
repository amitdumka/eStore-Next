<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="eStore.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:widget="clr-namespace:eStore.Views.Dashboard"
    Title="{Binding Title}">

    <VerticalStackLayout BackgroundColor="{x:StaticResource Accent_Blue100}">
        <Label
            Margin="5"
            FontAttributes="Bold,Italic"
            HorizontalOptions="CenterAndExpand"
            Text=" Accounting Dashboard  "
            TextColor="{x:StaticResource Tertiary}"
            VerticalOptions="CenterAndExpand" />
        <ScrollView
            BackgroundColor="{x:StaticResource Accent_Blue200}"
            HorizontalScrollBarVisibility="Always"
            MaximumHeightRequest="650"
            VerticalScrollBarVisibility="Always">
           <widget:DashboardAdminView BindingContext="{Binding viewModel}"/>
        </ScrollView>


    </VerticalStackLayout>

</ContentPage>